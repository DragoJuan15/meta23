<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.meta23.ERPController">

    <Label text="Simulación ERP" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Precio (venta):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Costo (producción):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="costField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Stock inicial:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Label text="Producto a vender:"/>
        <TextField fx:id="productNameField" promptText="Ej: Tornillo"/>
        <Button text="Vender" onAction="#onCreateOrderClick"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Agregar Producto" onAction="#onAddProductClick"/>
        <Button text="Ver Inventario" onAction="#onShowInventoryClick"/>
        <Button text="Ver Finanzas" onAction="#onShowFinanceClick"/>
    </HBox>

    <Label fx:id="statusLabel" text="Estado del sistema"/>

    <TextArea fx:id="logArea" prefWidth="450" prefHeight="250"/>
</VBox>
